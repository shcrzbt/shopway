{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "lib": ["esnext", "dom"],
    "skipLibCheck": true,
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "#app/*": ["src/app/*"],
      "#modules/*": ["src/modules/*"],
      "#services/*": ["src/shared/services/*"],
      "#pages/*": ["src/views/pages/*"],
      "#shared/*": ["src/shared/*"],
      "#icons/*": ["src/shared/components/icons/*"],
    },
    "types": ["node", "vite/client"]
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue", "src/**/*.scss", "src/shared/utils/constants/ui.constants.ts"],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
